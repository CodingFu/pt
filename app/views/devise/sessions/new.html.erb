<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<div id="login_bar">
    <div style="float:left;margin-right:20px;">
      <%= f.label :email, 'Логин' %><br />
      <%= f.email_field :email, :autofocus => true, :size=>40, :id=>'login' %>
    </div>

    <div style="float:left;margin-right:20px;">
      <%= f.label :password, 'Пароль' %><br />
      <%= f.password_field :password, :size=>41, :id=>'pass' %>
    </div>

    <div><%= f.submit "Вход", class: :button %></div>
	</div>
<% end %>
<div id="content">
  <%= render 'shared/news' %>

</div>
<%= render "devise/shared/links" %>
